<?xml version="1.0"?>
<project>
  <property name="pcreDir" value="${httpdDir}/srclib/pcre" />
  
  <target name="pcre-build" depends="zlib-build" if="${buildHttpd}">
    <CMake workingdir="${pcreDir}">
      <prop name="CMAKE_INSTALL_PREFIX" value="${intDir}" />
        
      <prop name="BUILD_SHARED_LIBS" value="ON" />
    </CMake>
    
    <CMake workingdir="${pcreDir}">
      <arg line="--config Release" />
      <target value="INSTALL" />
    </CMake>
  </target>
</project>
